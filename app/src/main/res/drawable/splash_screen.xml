<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del splash screen: Usamos un color negro por defecto. -->
    <!-- Puedes cambiar "#000000" por un color de tu paleta si lo tienes definido en colors.xml, ej: @color/tu_color_de_fondo -->
    <item android:drawable="#000000" /> 

    <!-- Ícono de la aplicación centrado -->
    <item android:gravity="center">
        <bitmap
            android:src="@mipmap/ic_launcher_round"
            android:gravity="center" />
    </item>
</layer-list>